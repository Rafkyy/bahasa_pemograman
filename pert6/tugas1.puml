start
:Display MENU;
repeat
  :Input pilihan;
  if (pilihan == 1) then (true)
    :Pilih Menu Makanan;
  else (false)
    if (pilihan == 2) then (true)
    :Pilih Menu Minuman;
    else (false)
      :Pilihan Salah;
